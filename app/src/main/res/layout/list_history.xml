<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="4dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="4dp"
    android:background="@drawable/btn_rounded_corner_default">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_history_user_image"
        android:layout_width="@dimen/image50dp"
        android:layout_height="@dimen/image50dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_history_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_history_opponent_image"
        app:layout_constraintStart_toEndOf="@+id/iv_history_user_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tv_history_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_history_opponent_name"
        app:layout_constraintStart_toEndOf="@+id/iv_history_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_history_date" />

    <TextView
        android:id="@+id/tv_history_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:gravity="center"
        android:text="VS"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_history_opponent_name"
        app:layout_constraintStart_toEndOf="@+id/tv_history_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_date" />
    <TextView
        android:id="@+id/tv_history_user_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:text=""
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_history_opponent_score"
        app:layout_constraintStart_toEndOf="@+id/iv_history_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_history_user_name"/>

    <TextView
        android:id="@+id/tv_history_opponent_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_history_opponent_image"
        app:layout_constraintStart_toEndOf="@+id/tv_history_user_name"
        app:layout_constraintTop_toBottomOf="@id/tv_history_date" />

    <TextView
        android:id="@+id/tv_history_opponent_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:textAlignment="viewEnd"
        android:text=""
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_history_opponent_image"
        app:layout_constraintStart_toEndOf="@+id/tv_history_user_score"
        app:layout_constraintTop_toBottomOf="@id/tv_history_opponent_name"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_history_opponent_image"
        android:layout_width="@dimen/image50dp"
        android:layout_height="@dimen/image50dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="8dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>