<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="4dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="4dp"
    android:background="@drawable/btn_rounded_corner_default">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_hs_user_image"
        android:layout_width="@dimen/image80dp"
        android:layout_height="@dimen/image80dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/white"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_logo"/>


    <TextView
        android:id="@+id/tv_hs_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:text="22.01.2022, 12:21 Uhr"
        android:paddingTop="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hs_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="UserName"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_hs_date" />

    <TextView
        android:id="@+id/tv_hs_user_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:paddingBottom="2dp"
        android:text="2000 Points"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_hs_user_name"/>

    <TextView
        android:id="@+id/tv_hs_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="1"
        android:textColor="@color/yellow"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:background="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>