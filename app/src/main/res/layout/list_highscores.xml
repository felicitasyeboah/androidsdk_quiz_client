<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_marginHorizontal="8dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_hs_user_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_logo"
        app:shapeAppearanceOverlay="@style/RoundCorner"/>


    <TextView
        android:id="@+id/tv_hs_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="22.01.2022, 12:21 Uhr"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tv_hs_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="UserName"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_hs_date" />

    <TextView
        android:id="@+id/tv_hs_user_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="2000 Points"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_hs_pos"
        app:layout_constraintStart_toEndOf="@+id/iv_hs_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_hs_user_name"/>

    <TextView
        android:id="@+id/tv_hs_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="1"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:background="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>